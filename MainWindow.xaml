<Window x:Class="WpfCanvasPOC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCanvasPOC"
        mc:Ignorable="d"
        Title="WpfCanvasPOC" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Actions">
                <MenuItem Header="Save" Click="MenuItem_Save_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer>
            <InkCanvas x:Name="Canvas" Background="White"/>
        </ScrollViewer>
    </DockPanel>
</Window>
